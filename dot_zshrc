# zmodload zsh/zprof

autoload -Uz compinit

local zcompdump="${ZDOTDIR:-$HOME}/.zcompdump"

# Get the current day of the year
# Using `date +%j` is standard and works on macOS.
local current_day_of_year=$(date "+%j")

local dump_day_of_year="" # Initialize to empty

if [[ -f "$zcompdump" ]]; then
    # Get the modification time of the dump file in YYYY-MM-DD format
    # Ensure all output, including newlines, is captured and trimmed.
    # The 'head -n 1' and 'tr -d '\n'' are defensive against unexpected output.
    local dump_mod_date_str=$(stat -f "%Sm" -t "%Y-%m-%d" "$zcompdump" 2>/dev/null | head -n 1 | tr -d '\n')

    # If we successfully got a date string, then try to format it.
    if [[ -n "$dump_mod_date_str" ]]; then
        # This part should work given your manual tests.
        # Adding 2>/dev/null again for robustness in case of weird stat output.
        dump_day_of_year=$(date -j -f "%Y-%m-%d" "$dump_mod_date_str" "+%j" 2>/dev/null | head -n 1 | tr -d '\n')
    fi
fi

# Compare current day with dump file's day
# Use explicit string comparison operators `==` or `=` for clarity in [[...]]
if [[ -f "$zcompdump" && "$dump_day_of_year" == "$current_day_of_year" ]]; then
    compinit -C -d "$zcompdump"
else
    # If dump file is missing, or not from today, or if any error occurred
    # during date parsing (leading to empty dump_day_of_year), regenerate it.
    compinit -d "$zcompdump"
fi

# Zinit
source ~/.zsh/zinit.zsh

source ~/.zsh/alias.zsh
source ~/.zsh/path.zsh
source ~/.zsh/tmux.zsh

# only source arch if the system is arch linux
if [[ -f ~/.zsh/arch.zsh && -d /etc/arch-release ]]; then
  source ~/.zsh/arch.zsh
fi

# History
HISTFILE=~/.zsh_history
HISTSIZE=5000
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_dups
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_find_no_dups

# Completion styling
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"
zstyle ':completion:*' menu no
zstyle ':fzf-tab:complete:cd:*' fzf-preview 'ls --color $realpath'
zstyle ':fzf-tab:complete:__zoxide_z:*' fzf-preview 'ls --color $realpath'

# bind zsh zsh-autosuggestions accept to same as my neovim copilot
bindkey '^f' autosuggest-accept

# color of zsh-autosuggestions
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=#6c6f85'

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# if whoami is sandeep450.kumar then export node unsafe environment variables as on work laptop zcaler hinders npm install
if [[ "$(whoami)" == "sandeep450.kumar" ]]; then
  # disable TLS certificate validation for Node.js
  export NODE_TLS_REJECT_UNAUTHORIZED=0

  # disable strict SSL checks in npm
  npm config set strict-ssl false >/dev/null 2>&1
fi

# zprof
